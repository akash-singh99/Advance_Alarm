<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape
            android:shape="rectangle"
            android:thickness="0dp">
            <stroke
                android:width="2dp"
                android:color="#757575" />
            <corners android:radius="10dp" />

            <padding
                android:bottom="15dp"
                android:left="8dp"
                android:right="8dp"
                android:top="5dp" />
        </shape>

    </item>
</layer-list>